<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#343A4A"
    android:gravity="center_horizontal"
    tools:context=".Home.Fragment.FragmentProduct"
    android:orientation="vertical">

    <!-- Tiêu đề -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ic_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/icom_person"
            android:contentDescription="Biểu tượng Người"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="The BEEF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#DEB887"
            android:gravity="center"/>
    </FrameLayout>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="230dp"
        android:src="@drawable/bannerhome"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="0dp"/>

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="6dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="16dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#B0B0B0"
        android:drawableStart="@drawable/icon_search"
        android:hint="Search"
        android:background="@drawable/bg_search"
        android:inputType="text"/>

    <!-- RecyclerView cho sản phẩm -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcProduct"
        android:layout_marginTop="5dp"
        android:layout_width="420dp"
        android:layout_height="435dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:paddingBottom="70dp" />
</LinearLayout>
